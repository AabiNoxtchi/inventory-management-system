<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Activities.Products.ProductAddActivity"
    android:orientation="vertical">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/employeeNameAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
        android:layout_marginHorizontal="20dp"
        android:textSize="15dp"
        android:hint="name :"
        android:inputType="text"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/employeeUserNameAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
        android:layout_marginHorizontal="20dp"
        android:textSize="15dp"
        android:hint="user name :"
        android:inputType="text"/>
    <RelativeLayout
        android:id="@+id/employeeAddButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp">
            <Button
                android:id="@+id/btn_edit_employee"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:paddingHorizontal="50dp"
                android:background="@color/colorPrimary"
                android:text="Edit" />
            <Button
                android:id="@+id/btn_delete_employee"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:paddingHorizontal="40dp"
                android:background="@color/colorPrimary"
                android:text="Delete" />
    </RelativeLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/spinnerProducts"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/employeeProductsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="products :"></TextView>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addFabProductForEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#09E90F"
            android:src="@drawable/ic_add_black_24dp"
            app:fabSize="normal"></com.google.android.material.floatingactionbutton.FloatingActionButton>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <ListView
        android:id="@+id/productsList"
        android:cacheColorHint="#00000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>


