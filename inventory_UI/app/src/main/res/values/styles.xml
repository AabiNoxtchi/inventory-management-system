<resources>

    <!-- Base application theme. -->
   <!-- <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

    </style>
    <style name="NestedScrollBarStyle">
        <item name="android:scrollbarFadeDuration">250</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fillViewport">true</item>
        <item name="android:orientation">vertical</item>
       <!-- <item name="windowActionModeOverlay">true</item>-->
    </style>

    <style name="ThemeNoTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

     <style name="text_in_layout">
        <item name="android:textSize">16sp</item>
    </style>



   <!-- <style name="text_in_layout_hint_Style">
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">14sp</item>
    </style>-->



</resources>
